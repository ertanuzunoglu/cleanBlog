<%- include("partials/_header")-%>

<body>

    <!-- Navigation -->
    <%- include('partials/_navbar') -%>

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('img/home-bg.jpg')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="site-heading">
                        <h1>Clean Blog</h1>
                        <span class="subheading">A Blog Theme by Start Bootstrap</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <% for(let post of posts) {%>
                <div class="post-preview">
                    <a href="/post/<%= post._id %>">
                        <h2 class="post-title">
                            <%= post.title %>
                        </h2>
                        <h3 class="post-subtitle">
                            <%= post.description %>
                        </h3>
                    </a>
                    <p class="post-meta">Posted by
                        <a href="#"><%= post.name %></a>
                        on <%= post.dateCreatedShow  %>
                    </p>
                </div>
                <hr>
                <% } %>
            </div>
        </div>
        <div>
            <% if(pages>0){%>
            <ul class="nav tm-paging-links">
                <% for(i=1; i<=pages; i++ ) {%>
                    <% if (i<pages) {%>
                        <li class="nav-item "><a href="/?page=<%= i %>" class="nav-link tm-paging-link"><%= i %></i></a></li>
                    <% } else if (i == current ){%>
                        <li class="nav-item active"><a href="/?page=<%= i %>" class="nav-link tm-paging-link"><%= i %></i></a></li>
                    <% } else {%>
                        <li class="nav-item "><a href="/?page=<%= i %>" class="nav-link tm-paging-link">></i></a></li>
                    <% } %>
                <% } %>
            </ul>
        <% } %>
        </div>
    </div>

    <hr>

    <!-- Footer -->
    <%- include('partials/_footer') -%>

    <!-- Custom scripts for this template -->
    <script src="js/clean-blog.min.js"></script>

</body>

</html>
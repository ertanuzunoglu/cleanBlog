<%- include("partials/_header")-%>

<body>

    <!-- Navigation -->
    <%- include('partials/_navbar') -%>

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('<%= post.image  %>')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="post-heading">
                        <h1><%= post.title  %></h1>
                        <h2 class="subheading"><%= post.description  %></h2>
                        <span class="meta">Posted by
                            <a href="#"><%= post.name  %></a>
                            on <%= post.dateCreatedShow  %></span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Post Content -->
    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <p><%= post.detail  %></p>
                </div>
            </div>
            <div class="col-lg-8 col-md-10 mx-auto">
                <!-- Share box -->
                    <div class="text-center">
                        <a href="/post/<%= post._id  %>?_method=DELETE" class="btn btn-danger p-0 tm-btn-animate tm-btn-download tm-icon-download p-1" onclick="return confirm('Are You Sure?')"><span>Delete Photo</span></a>
                    </div>
                </div>
            </div>
        </div>
        
    </article>

    <hr>

    <!-- Footer -->
    
    <%- include('partials/_footer') -%>

    <!-- Custom scripts for this template -->
    <script src="js/clean-blog.min.js"></script>

</body>

</html>